<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoggoActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="172dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bath"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:contentDescription="ppofdoggie"
                app:srcCompat="@color/colorPrimaryDark" />

            <Space
                android:layout_width="13dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="8sp"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="13dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10sp"
                    android:text="Gender"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8sp"
                    android:text="Breed"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8sp"
                    android:text="BDay"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8sp"
                    android:text="01/01/1970"
                    android:textSize="18sp"
                    android:typeface="normal" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </TableRow>

        <ProgressBar
            android:id="@+id/bath"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="92dp"
            android:layout_height="41dp"
            android:layout_marginBottom="262dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="174dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableRow" />

        <ProgressBar
            android:id="@+id/walk"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="92dp"
            android:layout_height="41dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="174dp"
            app:layout_constraintStart_toEndOf="@+id/bath"
            app:layout_constraintTop_toBottomOf="@+id/tableRow" />

        <ProgressBar
            android:id="@+id/veterinary"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="92dp"
            android:layout_height="41dp"
            android:layout_marginBottom="93dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="129dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bath" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="92dp"
            android:layout_height="41dp"
            android:layout_marginBottom="94dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="129dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/walk" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="105dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>